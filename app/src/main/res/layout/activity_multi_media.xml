<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".ui.multimedia.MultiMediaActivity">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_multi_media"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <id.timtam.protoimagepicker.uikit.multiimage.ImageIndicator
            android:id="@+id/ii_multi_media"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingHorizontal="6dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:alpha="0"
            android:translationY="@dimen/item_gap_96"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/item_image_indicator"
            tools:alpha="1"
            tools:translationY="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>